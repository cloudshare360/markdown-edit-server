{
  "name": "markdown-edit-server",
  "version": "0.0.1",
  "description": "A Zettlr-inspired desktop markdown editor",
  "main": "03-development/app/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite --config 03-development/config/vite.config.ts",
    "dev:electron": "tsc -p 03-development/config/tsconfig.node.json && cross-env NODE_ENV=development electron .",
    "build": "tsc -p 03-development/config/tsconfig.json && vite build --config 03-development/config/vite.config.ts && tsc -p 03-development/config/tsconfig.node.json",
    "build:electron": "electron-builder",
    "preview": "vite preview --config 03-development/config/vite.config.ts",
    "test": "echo \"Tests will be added per increment\" && exit 0",
    "test:unit": "echo \"Unit tests will be added\" && exit 0",
    "test:integration": "echo \"Integration tests will be added\" && exit 0",
    "test:coverage": "echo \"Coverage will be added\" && exit 0",
    "lint": "echo \"Linting will be configured\" && exit 0",
    "format": "echo \"Formatting will be configured\" && exit 0",
    "type-check": "tsc --noEmit -p 03-development/config/tsconfig.json"
  },
  "keywords": [
    "markdown",
    "editor",
    "electron",
    "desktop",
    "zettlr"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.6"
  }
}
